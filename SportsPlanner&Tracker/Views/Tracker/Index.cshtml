@model SportsPlanner_Tracker.ViewModels.ProgressVM

@{
    ViewData["Title"] = "Progress Tracker";
}

<h2>Progress Tracker</h2>

<a asp-action="AddProgress" class="btn btn-primary">Add Progress</a>

@if (Model.ChartData != null && Model.ChartData.Length > 0)
{
    <img src="data:image/png;base64,@Convert.ToBase64String(Model.ChartData)" alt="Progress Chart" class="img-fluid" />
}
else
{
    <div class="text-center mt-4">
        <img src="~/images/default-chart.png.webp" alt="Example Progress Chart" class="img-fluid" style="max-width: 500px;" />
        <p class="text-muted">Your progress chart will appear here once you add progress data.</p>
    </div>
}
<br />
<br />

<table class="table table-dark table-striped">

    <thead>
        <tr>
            <th>Date</th>
            <th>Weight (kg)</th>
            <th>BMI</th>
            <th>Calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var entry in Model.UserProgress)
        {
            <tr>
                <td>@entry.Date.ToShortDateString()</td>
                <td>@entry.Weight kg</td>
                <td>@entry.BMI.ToString("F2")</td>  
                <td>@entry.CaloricIntake kcal</td>
            </tr>
        }
    </tbody>
</table>
