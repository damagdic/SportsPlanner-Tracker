<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SportsPlanner&Tracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-dumbbell"></i> SportsPlanner
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Planner" asp-action="Index">
                                <i class="fa-solid fa-calendar-alt"></i> Planner
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Tracker" asp-action="Index">
                                <i class="fa-solid fa-chart-line"></i> Progress Tracker
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="User" asp-action="UserInfo">
                                <i class="fa-solid fa-user"></i> Profile
                            </a>
                        </li>

                        @if (Context.Session.GetInt32("UserId") != null)
                        {
                            <!-- Ako je korisnik prijavljen, prikazujemo ime i Logout -->
                            <li class="nav-item">
                                <span class="nav-link text-white">
                                    <i class="fa-solid fa-user-circle"></i> @Context.Session.GetString("FullName")
                                </span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger btn-auth" asp-controller="User" asp-action="Logout">
                                    <i class="fa-solid fa-sign-out-alt"></i> Logout
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- Ako nije prijavljen, prikazujemo Register i Login -->
                            <li class="nav-item">
                                <a class="btn btn-outline-success btn-auth" asp-controller="User" asp-action="Create">
                                    <i class="fa-solid fa-user-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-light btn-auth" asp-controller="User" asp-action="Login">
                                    <i class="fa-solid fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-center p-3 mt-4">
        <p>© 2025 - SportsPlanner&Tracker</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
